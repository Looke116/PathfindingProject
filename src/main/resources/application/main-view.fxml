<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="200.0" minWidth="200.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MainViewController">
   <children>
      <BorderPane minHeight="0.0" minWidth="0.0" stylesheets="@something.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <right>
            <HBox minHeight="0.0" minWidth="0.0">
               <children>
                  <VBox alignment="CENTER" minHeight="0.0" minWidth="0.0" spacing="10.0" styleClass="sidebar">
                     <children>
                              <Button minHeight="0.0" minWidth="0.0" mnemonicParsing="false" onAction="#createRandomExample" onMouseEntered="#showHoverText" onMouseExited="#hideHoverText" onMouseMoved="#moveHoverText" text="Create Random Example" textFill="WHITE" />
                        <ToggleButton fx:id="drawToggle" minHeight="0.0" minWidth="0.0" mnemonicParsing="false" styleClass="togglebutton" text="Draw" textAlignment="CENTER" textFill="WHITE" />
                        <TextField fx:id="POLYGON_NUMBER" minHeight="0.0" minWidth="0.0" promptText="max polygons" styleClass="textfield" text="5" />
                        <Slider fx:id="SHAPE_SIZE" blockIncrement="1.0" max="250.0" min="50.0" minHeight="0.0" minWidth="0.0" value="150.0" />
                              <Button minHeight="0.0" minWidth="0.0" mnemonicParsing="false" onAction="#clearCanvasEvent" stylesheets="@something.css" text="Clear Canvas" textFill="WHITE" />
                        <HBox alignment="CENTER" minHeight="0.0" minWidth="0.0" spacing="10.0">
                           <children>
                                    <Button minHeight="0.0" minWidth="0.0" mnemonicParsing="false" onAction="#importFromFile" text="Import" textFill="WHITE" />
                                    <Button minHeight="0.0" minWidth="0.0" mnemonicParsing="false" onAction="#exportToFile" text="Export" textFill="WHITE" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
               </children>
            </HBox>
         </right>
         <center>
              <SplitPane fx:id="splitPane" minHeight="0.0" minWidth="0.0" BorderPane.alignment="CENTER">
                  <items>
                      <AnchorPane fx:id="canvas" minHeight="0.0" minWidth="0.0" onMouseClicked="#mouseClicked" onMouseMoved="#mouseMoved" prefWidth="400.0" />
                  </items>
              </SplitPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
