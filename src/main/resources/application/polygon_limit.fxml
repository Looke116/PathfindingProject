         <bottom>
            <Button mnemonicParsing="false" onAction="#terminateWarningWindow" text="ok" textFill="WHITE" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
